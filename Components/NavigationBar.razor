
<style>
    /* Small devices (landscape phones, 576px and up) */
    @@media (max-width: 575.98px) {
        .SmallLogo {
            margin-left: 135px;
        }
    }
</style>
<div class="bg-white flex items-center p-4">
    <div class="drawerComp ml-1 block lg:hidden">
        <DrawerComp />
    </div>
    <div class="SmallLogo">
        <MainLogo />
    </div>


    <div class="space-x-5 ml-10 hidden sm:hidden md:hidden lg:block">
        <!-- Your content here -->
        <MudButton Variant="Variant.Text" @onclick="NavigateToHome">Home</MudButton>
        <MudButton Variant="Variant.Text" @onclick="NavigateToAbout">About</MudButton>
        <MudButton Variant="Variant.Text" @onclick="NavigateToPricing">Pricing</MudButton>

        <div class="relative inline-block text-left">
            <button @onclick="ToggleDropdown" type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300  px-4 py-2 bg-transparent text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="options-menu" aria-haspopup="true" aria-expanded="true">
                Products
                <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </button>
            @if (showDropdown)
            {

                <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
                    <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">Product 1</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">Product 2</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">Product 3</a>
                    </div>
                </div>
            }

        </div>



    </div>
    <div class="space-x-5 ml-auto hidden sm:hidden md:hidden lg:block">


        <SearchBar />
        <NotificationBtn />
        <SwitchBtn />
        <GithubIcon />

    </div>
</div>




@code {
    void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    void NavigateToPricing()
    {
        NavigationManager.NavigateTo("/pricing");
    }

    void NavigateToAbout()
    {
        NavigationManager.NavigateTo("/about");
    }

    private bool showDropdown = false;

    private void ToggleDropdown()
    {
        showDropdown = !showDropdown;
    }
}
